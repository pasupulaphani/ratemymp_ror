<!-- Start of first page: #one -->
<div data-role="page" id="one">

  <div data-role="header">
    <h1>My opinions</h1>
  </div><!-- /header -->
  
<%= form_for(@mp1) do |f| %>
  <% if @mp1.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@mp1.errors.count, "error") %> prohibited this mp1 from being saved:</h2>

      <ul>
      <% @mp1.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.fields_for :pcs do |builder| %>
    
    <div data-role="fieldcontain"><br /><br />
      <b><%= builder.label :postcode, "Postcode" %></b>
      <%= builder.text_field :postcode, :class => :postcode %>
    </div><br />
    
    <div class="row_t">
      <label for="liberty_slide"></label>
      <div class="cell_t_left">Genghis Khan</div>
      <div class="cell_t_right">Bambi</div>
    </div>
    <div class="ui-slider1">
      <%= builder.hidden_field :rating1, 'data-type' => :range, :value=>"50", :min=>"0", :max=>"100", 'data-highlight'=>"true"%>
    </div><br />

    <div class="row_t">
      <label for="europe_slide"></label>
      <div class="cell_t_left">Anti-EU</div>
      <div class="cell_t_right">Pro-EU</div>
    </div>
    <div class="ui-slider1">
      <%= builder.hidden_field :rating2, 'data-type' => :range, :value=>"50", :min=>"0", :max=>"100", 'data-highlight'=>"true"%>
    </div><br />

    <div class="row_t">
      <label for="tolerence_slide"></label>
      <div class="cell_t_left">Anti-terroism</div>
      <div class="cell_t_right">Freedom of speech</div>
    </div>
    <div class="ui-slider1">
      <%= builder.hidden_field :rating3, 'data-type' => :range, :value=>"50", :min=>"0", :max=>"100", 'data-highlight'=>"true"%>
    </div><br />

    <div class="row_t">
      <label for="education_slide"></label>
      <div class="cell_t_left">Parents know best</div>
      <div class="cell_t_right">Teachers know best</div>
    </div>
    <div class="ui-slider1">
      <%= builder.hidden_field :rating4, 'data-type' => :range, :value=>"50", :min=>"0", :max=>"100", 'data-highlight'=>"true"%>
    </div><br />

  <% end %>

    <p><a onClick="postcode()" data-role="button">next</a></p>
          
    <br /><br /><br /><br />
  </div><!-- /content -->
  
  <div data-role="footer" data-theme="d">
          <h4>Thanks for filling</h4>
  </div><!-- /footer -->
</div><!-- /page one -->


